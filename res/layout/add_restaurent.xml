<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A4A4A4" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textColor="#585858"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/rest_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rest_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="Date Time"
        android:textColor="#585858"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rest_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:textColor="#585858"
        android:textStyle="bold" />

    <Button
        android:id="@+id/rest_edit_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/rest_date"
        android:background="#ffffff"
        android:text="Edit" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rest_date"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="Address"
        android:textColor="#585858"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/rest_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/likeOrNot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rest_address"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="Do you like it?"
        android:textColor="#585858"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/rest_likeOrNot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/likeOrNot"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rest_likeOrNot"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="Comment"
        android:textColor="#585858"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/rest_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/rest_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rest_comment"
        android:text="Save" />

    <Button
        android:id="@+id/rest_saveToTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rest_comment"
        android:layout_toRightOf="@+id/rest_save"
        android:text="Save To Trip" />

</RelativeLayout>